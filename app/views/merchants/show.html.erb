<h1>Ahoy Matey!</h1>


<h2>Name: <%= @merchant.name %></h2>

<h2>Merchant </h2>

<h3><%= link_to "Merchant Bulk Discounts ", "/merchants/#{@merchant.id}/bulk_discounts" %></h3>
<h3><%= link_to "Merchant Items Index", "/merchants/#{@merchant.id}/items" %></h3>
<h3><%= link_to "Merchant Invoices Index", "/merchants/#{@merchant.id}/invoices" %></h3>


<h5><%= "Top 5 Customers, # of Transactions" %></h5>
  <% @merchant.top_five_customers.each do |customer| %>
    <%= "#{customer.first_name} #{customer.last_name}: #{customer.successful_transactions}" %>
  <% end %>

<section id="items_shipped">
  <ul>
    <% @merchant.items_to_ship.each do |invoice_item| %>

      <li>
        <%= invoice_item.item_name %>
        <%= link_to "Invoice ID: #{invoice_item.invoice_id}", "/merchants/#{@merchant.id}/invoices/#{invoice_item.invoice_id}"%>
        <%= invoice_item.created_at.strftime("%A, %B %d, %Y") %>
        <%# invoice_item.invoice_created_at.strftime("%A, %B %d, %Y") %>
      </li>
    <% end %>
  </ul>
</section>